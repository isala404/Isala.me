---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogSearch from '../../components/BlogSearch.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft)).sort(
  (a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf()
);

// Prepare posts data for search
const searchablePosts = posts.map((post) => ({
  slug: post.slug,
  title: post.data.title,
  description: post.data.description,
  tags: post.data.tags || [],
  publishedAt: post.data.publishedAt.toISOString(),
  readingTime: post.data.readingTime || 5,
}));

// Get all unique tags with counts
const tagCounts = posts.reduce(
  (acc, post) => {
    (post.data.tags || []).forEach((tag) => {
      acc[tag] = (acc[tag] || 0) + 1;
    });
    return acc;
  },
  {} as Record<string, number>
);

const allTags = Object.entries(tagCounts)
  .sort((a, b) => b[1] - a[1])
  .map(([tag]) => tag);

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
}
---

<BaseLayout
  title="Writing | Isala Piyarisi"
  description="Thoughts on eBPF, Kubernetes, observability, and engineering adventures."
>
  <main class="max-w-content relative z-10 mx-auto px-6 py-16 md:py-24">
    <!-- Header -->
    <header class="fade-in fade-in-delay-1 mb-8">
      <h1 class="text-summer-text mb-4 text-3xl font-semibold tracking-tight md:text-4xl">
        Writing
      </h1>
      <p class="text-summer-text-secondary text-base">
        Long-form thoughts on engineering, infrastructure, and lessons learned the hard way
      </p>
    </header>

    <!-- Search -->
    <div class="fade-in fade-in-delay-1">
      <BlogSearch posts={searchablePosts} />
    </div>

    <!-- Tags Filter -->
    {
      allTags.length > 0 && (
        <section class="fade-in fade-in-delay-1 mb-10">
          <div class="flex flex-wrap gap-2">
            {allTags.map((tag) => (
              <a
                href={`/blog/tag/${tag}`}
                class="bg-summer-text/5 text-summer-text-secondary border-summer-text/10 hover:bg-summer-accent/10 hover:text-summer-accent hover:border-summer-accent/30 rounded border px-3 py-1 text-sm transition-colors"
              >
                {tag}
                <span class="text-summer-text-secondary/50 ml-1">({tagCounts[tag]})</span>
              </a>
            ))}
          </div>
        </section>
      )
    }

    <!-- Posts List -->
    <section class="fade-in fade-in-delay-2">
      {
        posts.length === 0 ? (
          <p class="text-summer-text-secondary">No posts yet. Check back soon!</p>
        ) : (
          <div class="space-y-8" data-posts-container>
            {posts.map((post) => (
              <article
                class="group border-summer-text/10 border-b border-dotted pb-8 last:border-0"
                data-slug={post.slug}
              >
                <div class="mb-2 flex flex-col gap-2 md:flex-row md:items-start md:justify-between">
                  <a
                    href={`/blog/${post.slug}`}
                    class="text-summer-text hover:text-summer-accent text-lg font-medium transition-colors"
                  >
                    {post.data.title}
                  </a>
                  <span class="text-summer-text-secondary shrink-0 font-mono text-sm">
                    {formatDate(post.data.publishedAt)}
                  </span>
                </div>
                <a href={`/blog/${post.slug}`} class="block">
                  <p class="text-summer-text-secondary mb-3 text-sm leading-relaxed">
                    {post.data.description}
                  </p>
                </a>
                <div class="text-summer-text-secondary flex items-center gap-4 text-xs">
                  <span>{post.data.readingTime || 5} min read</span>
                  {post.data.tags && post.data.tags.length > 0 && (
                    <div class="flex gap-2">
                      {post.data.tags.slice(0, 3).map((tag) => (
                        <a
                          href={`/blog/tag/${tag}`}
                          class="bg-summer-text/5 border-summer-text/10 hover:bg-summer-accent/10 hover:text-summer-accent hover:border-summer-accent/30 rounded border px-2 py-0.5 transition-colors"
                        >
                          {tag}
                        </a>
                      ))}
                    </div>
                  )}
                </div>
              </article>
            ))}
          </div>
        )
      }
    </section>
  </main>
</BaseLayout>
