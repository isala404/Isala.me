---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogSearch from '../../components/BlogSearch.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft)).sort(
  (a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf()
);

// Prepare posts data for search
const searchablePosts = posts.map((post) => ({
  slug: post.slug,
  title: post.data.title,
  description: post.data.description,
  tags: post.data.tags || [],
  publishedAt: post.data.publishedAt.toISOString(),
  readingTime: post.data.readingTime || 5,
  externalUrl: post.data.externalUrl,
}));

// Get all unique tags with counts
const tagCounts = posts.reduce(
  (acc, post) => {
    (post.data.tags || []).forEach((tag) => {
      acc[tag] = (acc[tag] || 0) + 1;
    });
    return acc;
  },
  {} as Record<string, number>
);

const allTags = Object.entries(tagCounts)
  .sort((a, b) => b[1] - a[1])
  .map(([tag]) => tag);

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
}

function getYear(date: Date): number {
  return date.getFullYear();
}

// Group posts by year
const postsByYear = posts.reduce(
  (acc, post) => {
    const year = getYear(post.data.publishedAt);
    if (!acc[year]) acc[year] = [];
    acc[year].push(post);
    return acc;
  },
  {} as Record<number, typeof posts>
);

const years = Object.keys(postsByYear)
  .map(Number)
  .sort((a, b) => b - a);
---

<BaseLayout
  title="Writing | Isala Piyarisi"
  description="Deep dives into eBPF, Kubernetes, platform engineering, and AI infrastructure."
>
  <main class="max-w-content relative z-10 mx-auto px-6 py-16 md:py-24">
    <!-- Back Home -->
    <a href="/" class="text-theme-text-secondary arrow-link mb-8 inline-block text-sm">
      <span class="arrow">‚Üê</span><span class="text">back home</span>
    </a>

    <!-- Header -->
    <header class="mb-8">
      <h1 class="text-theme-text mb-4 text-3xl font-semibold tracking-tight md:text-4xl">
        Writing
      </h1>
      <p class="text-theme-text-secondary text-base">
        Long-form thoughts on engineering, infrastructure, and lessons learned the hard way
      </p>
    </header>

    <!-- Search -->
    <div>
      <BlogSearch posts={searchablePosts} />
    </div>

    <!-- Tags Filter -->
    {
      allTags.length > 0 && (
        <section class="mb-10">
          <div class="flex flex-wrap gap-2">
            {allTags.slice(0, 8).map((tag) => (
              <a
                href={`/blog/tag/${tag}`}
                class="bg-theme-card text-theme-text-secondary border-theme-border hover:bg-theme-accent-bg hover:text-theme-accent hover:border-theme-border-hover rounded border px-3 py-1 text-sm transition-colors"
              >
                {tag}
                <span class="text-theme-text-muted ml-1">({tagCounts[tag]})</span>
              </a>
            ))}
          </div>
        </section>
      )
    }

    <!-- Posts List -->
    <section>
      {
        posts.length === 0 ? (
          <p class="text-theme-text-secondary">No posts yet. Check back soon!</p>
        ) : (
          <div class="space-y-10" data-posts-container>
            {years.map((year) => (
              <div>
                <h2 class="text-theme-text-secondary bg-theme-bg sticky top-4 mb-4 py-1 font-mono text-sm">
                  {year}
                </h2>
                <div class="space-y-6">
                  {postsByYear[year].map((post) => {
                    const postUrl = post.data.externalUrl || `/blog/${post.slug}`;
                    const isExternal = !!post.data.externalUrl;
                    return (
                      <article
                        class="group border-theme-border border-b border-dotted pb-6 last:border-0"
                        data-slug={post.slug}
                      >
                        <div class="mb-2 flex flex-col gap-2 md:flex-row md:items-start md:justify-between">
                          <a
                            href={postUrl}
                            target={isExternal ? '_blank' : undefined}
                            class="text-theme-text hover:text-theme-accent text-lg font-medium transition-colors"
                          >
                            {post.data.title}
                          </a>
                          <span class="text-theme-text-secondary shrink-0 font-mono text-sm">
                            {formatDate(post.data.publishedAt)}
                          </span>
                        </div>
                        <a href={postUrl} target={isExternal ? '_blank' : undefined} class="block">
                          <p class="text-theme-text-secondary mb-3 text-sm leading-relaxed">
                            {post.data.description}
                          </p>
                        </a>
                        <div class="text-theme-text-secondary flex items-center gap-4 text-xs">
                          <span>{post.data.readingTime || 5} min read</span>
                          {post.data.tags && post.data.tags.length > 0 && (
                            <div class="flex gap-2">
                              {post.data.tags.slice(0, 3).map((tag) => (
                                <a
                                  href={`/blog/tag/${tag}`}
                                  class="bg-theme-card border-theme-border hover:bg-theme-accent-bg hover:text-theme-accent hover:border-theme-border-hover rounded border px-2 py-0.5 transition-colors"
                                >
                                  {tag}
                                </a>
                              ))}
                            </div>
                          )}
                        </div>
                      </article>
                    );
                  })}
                </div>
              </div>
            ))}
          </div>
        )
      }
    </section>
  </main>
</BaseLayout>
