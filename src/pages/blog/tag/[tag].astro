---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);

  // Get all unique tags
  const allTags = [...new Set(posts.flatMap((post) => post.data.tags || []))];

  return allTags.map((tag) => ({
    params: { tag },
    props: {
      tag,
      posts: posts
        .filter((post) => post.data.tags?.includes(tag))
        .sort((a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf()),
    },
  }));
}

const { tag, posts } = Astro.props;

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
}
---

<BaseLayout
  title={`Posts tagged "${tag}" | Isala Piyarisi`}
  description={`All blog posts tagged with ${tag}`}
>
  <main class="max-w-content relative z-10 mx-auto px-6 py-16 md:py-24">
    <!-- Header -->
    <header class="mb-12">
      <a href="/blog/" class="text-theme-text-secondary arrow-link mb-6 inline-block text-sm">
        <span class="arrow">‚Üê</span><span class="text">all writing</span>
      </a>
      <h1 class="text-theme-text mb-4 text-3xl font-semibold tracking-tight md:text-4xl">
        Tagged: <span class="text-theme-accent">{tag}</span>
      </h1>
      <p class="text-theme-text-secondary text-base">
        {posts.length} post{posts.length !== 1 ? 's' : ''} found
      </p>
    </header>

    <!-- Posts List -->
    <section>
      {
        posts.length === 0 ? (
          <p class="text-theme-text-secondary">No posts found with this tag.</p>
        ) : (
          <div class="space-y-8">
            {posts.map((post) => (
              <article class="group border-theme-border border-b border-dotted pb-8 last:border-0">
                <a href={`/blog/${post.slug}/`} class="block">
                  <div class="mb-2 flex flex-col gap-2 md:flex-row md:items-start md:justify-between">
                    <h2 class="text-theme-text group-hover:text-theme-accent text-lg font-medium transition-colors">
                      {post.data.title}
                    </h2>
                    <span class="text-theme-text-secondary shrink-0 font-mono text-sm">
                      {formatDate(post.data.publishedAt)}
                    </span>
                  </div>
                  <p class="text-theme-text-secondary mb-3 text-sm leading-relaxed">
                    {post.data.description}
                  </p>
                  <div class="text-theme-text-secondary flex items-center gap-4 text-xs">
                    <span>{post.data.readingTime || 5} min read</span>
                    {post.data.tags && post.data.tags.length > 0 && (
                      <div class="flex gap-2">
                        {post.data.tags.map((t) => (
                          <span
                            class:list={[
                              'rounded border px-2 py-0.5',
                              t === tag
                                ? 'bg-theme-accent-bg border-theme-border-hover text-theme-accent'
                                : 'bg-theme-card border-theme-border',
                            ]}
                          >
                            {t}
                          </span>
                        ))}
                      </div>
                    )}
                  </div>
                </a>
              </article>
            ))}
          </div>
        )
      }
    </section>
  </main>
</BaseLayout>
