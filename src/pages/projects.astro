---
import BaseLayout from '../layouts/BaseLayout.astro';
import { projects } from '../data/profile';
import { Github, ExternalLink, Star } from 'lucide-astro';
---

<BaseLayout
  title="Projects | Isala Piyarisi"
  description="Open source projects and side experiments in eBPF, Kubernetes, and beyond."
>
  <main class="max-w-content relative z-10 mx-auto px-6 py-16 md:py-24">
    <!-- Back Home -->
    <a href="/" class="text-summer-text-secondary arrow-link fade-in mb-8 inline-block text-sm">
      <span class="arrow">‚Üê</span><span class="text">back home</span>
    </a>

    <!-- Header -->
    <header class="fade-in fade-in-delay-1 mb-12">
      <h1 class="text-summer-text mb-4 text-3xl font-semibold tracking-tight md:text-4xl">
        Projects
      </h1>
      <p class="text-summer-text-secondary text-base">
        Things I've built, shipped, and occasionally abandoned
      </p>
    </header>

    <!-- Projects Grid -->
    <section class="fade-in fade-in-delay-2">
      <div class="space-y-6">
        {
          projects.map((project) => (
            <article class="group border-summer-text/5 bg-summer-text/[0.02] hover:bg-summer-text/[0.04] hover:border-summer-accent/20 rounded-lg border p-5 transition-all">
              <div class="mb-3 flex items-start justify-between gap-4">
                <div class="flex-grow">
                  <div class="mb-1 flex items-center gap-2">
                    <h2 class="text-summer-text group-hover:text-summer-accent font-medium transition-colors">
                      {project.name}
                    </h2>
                    {project.publication && (
                      <span class="bg-summer-golden/20 text-summer-golden rounded px-1.5 py-0.5 text-xs">
                        {project.publication}
                      </span>
                    )}
                  </div>
                  <p class="text-summer-text-secondary text-sm leading-relaxed">
                    {project.description}
                  </p>
                </div>
                {project.stars && (
                  <div class="text-summer-golden flex shrink-0 items-center gap-1">
                    <Star class="h-3.5 w-3.5 fill-current" />
                    <span class="text-sm">{project.stars}</span>
                  </div>
                )}
              </div>

              <div class="flex items-center justify-between">
                {project.tech && project.tech.length > 0 && (
                  <div class="flex flex-wrap gap-2">
                    {project.tech.map((tech) => (
                      <span class="bg-summer-text/5 text-summer-text-secondary border-summer-text/10 rounded border px-2 py-0.5 text-xs">
                        {tech}
                      </span>
                    ))}
                  </div>
                )}

                {project.url && (
                  <a
                    href={project.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-summer-accent hover:text-summer-accent-hover ml-4 flex shrink-0 items-center gap-1 text-sm transition-colors"
                  >
                    <Github class="h-4 w-4" />
                    <span>View</span>
                  </a>
                )}
              </div>
            </article>
          ))
        }
      </div>
    </section>

    <!-- More Projects CTA -->
    <section
      class="fade-in fade-in-delay-3 border-summer-text/20 mt-10 rounded-lg border border-dashed p-5 text-center"
    >
      <p class="text-summer-text-secondary mb-3 text-sm">
        More experiments and half-baked ideas on GitHub
      </p>
      <a
        href="https://github.com/isala404"
        target="_blank"
        rel="noopener noreferrer"
        class="text-summer-accent hover:text-summer-accent-hover inline-flex items-center gap-2 transition-colors"
      >
        <Github class="h-4 w-4" />
        <span>@isala404</span>
        <ExternalLink class="h-3 w-3" />
      </a>
    </section>

  </main>
</BaseLayout>
