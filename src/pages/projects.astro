---
import BaseLayout from '../layouts/BaseLayout.astro';
import { projects } from '../lib/profile';
import { Github, ExternalLink, Star } from 'lucide-astro';

// Group projects by domain
const domainOrder = ['systems', 'intelligence', 'products'] as const;
const domainLabels: Record<string, string> = {
  systems: 'Systems',
  intelligence: 'Intelligence',
  products: 'Products',
};

const groupedProjects = domainOrder
  .map((domain) => ({
    domain,
    label: domainLabels[domain],
    projects: projects.filter((p) => p.domain === domain),
  }))
  .filter((group) => group.projects.length > 0);

// Projects without domain go at the end
const ungroupedProjects = projects.filter((p) => !p.domain);
---

<BaseLayout
  title="Projects | Isala Piyarisi"
  description="Open source projects in eBPF, Kubernetes, Rust, and AI—from local-first LLMs to distributed systems tooling."
  structuredData={{
    '@context': 'https://schema.org',
    '@type': 'CollectionPage',
    name: 'Projects - Isala Piyarisi',
    description: 'Open source projects in eBPF, Kubernetes, Rust, and AI.',
    url: 'https://isala.me/projects/',
  }}
>
  <main class="max-w-content relative z-10 mx-auto px-6 py-16 md:py-24">
    <!-- Back Home -->
    <a href="/" class="text-theme-text-secondary arrow-link mb-8 inline-block text-sm">
      <span class="arrow">←</span><span class="text">back home</span>
    </a>

    <!-- Header -->
    <header class="mb-12">
      <h1 class="text-theme-text mb-4 text-3xl font-semibold tracking-tight md:text-4xl">
        Projects
      </h1>
      <p class="text-theme-text-secondary text-base">
        Things I've built, shipped, and occasionally abandoned
      </p>
    </header>

    <!-- Projects by Domain -->
    <section class="space-y-10">
      {
        groupedProjects.map((group) => (
          <div>
            <h2 class="text-theme-text-secondary mb-4 font-mono text-sm tracking-wider uppercase">
              {group.label}
            </h2>
            <div class="space-y-4">
              {group.projects.map((project) => {
                const Tag = project.url ? 'a' : 'div';
                return (
                  <Tag
                    href={project.url}
                    target={project.url ? '_blank' : undefined}
                    rel={project.url ? 'noopener noreferrer' : undefined}
                    class="group border-theme-border bg-theme-card/30 hover:bg-theme-card hover:border-theme-border-hover block rounded-lg border p-5 transition-all"
                  >
                    <div class="mb-3 flex items-start justify-between gap-4">
                      <div class="flex-grow">
                        <div class="mb-1 flex items-center gap-2">
                          <h3 class="text-theme-text group-hover:text-theme-accent font-medium transition-colors">
                            {project.name}
                          </h3>
                          {project.publication && (
                            <span class="bg-theme-highlight-bg text-theme-highlight rounded px-1.5 py-0.5 text-xs">
                              {project.publication}
                            </span>
                          )}
                        </div>
                        <p class="text-theme-text-secondary text-sm leading-relaxed">
                          {project.description}
                        </p>
                      </div>
                      {project.stars !== undefined && (
                        <div class="text-theme-highlight flex shrink-0 items-center gap-1">
                          <Star class="h-3.5 w-3.5 fill-current" />
                          <span class="text-sm">{project.stars}</span>
                        </div>
                      )}
                    </div>

                    {project.tech && project.tech.length > 0 && (
                      <div class="flex flex-wrap gap-2">
                        {project.tech.map((tech) => (
                          <span class="bg-theme-card text-theme-text-secondary border-theme-border rounded border px-2 py-0.5 text-xs">
                            {tech}
                          </span>
                        ))}
                      </div>
                    )}
                  </Tag>
                );
              })}
            </div>
          </div>
        ))
      }

      {/* Ungrouped projects if any */}
      {
        ungroupedProjects.length > 0 && (
          <div class="space-y-4">
            {ungroupedProjects.map((project) => {
              const Tag = project.url ? 'a' : 'div';
              return (
                <Tag
                  href={project.url}
                  target={project.url ? '_blank' : undefined}
                  rel={project.url ? 'noopener noreferrer' : undefined}
                  class="group border-theme-border bg-theme-card/30 hover:bg-theme-card hover:border-theme-border-hover block rounded-lg border p-5 transition-all"
                >
                  <div class="mb-3 flex items-start justify-between gap-4">
                    <div class="flex-grow">
                      <div class="mb-1 flex items-center gap-2">
                        <h3 class="text-theme-text group-hover:text-theme-accent font-medium transition-colors">
                          {project.name}
                        </h3>
                        {project.publication && (
                          <span class="bg-theme-highlight-bg text-theme-highlight rounded px-1.5 py-0.5 text-xs">
                            {project.publication}
                          </span>
                        )}
                      </div>
                      <p class="text-theme-text-secondary text-sm leading-relaxed">
                        {project.description}
                      </p>
                    </div>
                    {project.stars !== undefined && (
                      <div class="text-theme-highlight flex shrink-0 items-center gap-1">
                        <Star class="h-3.5 w-3.5 fill-current" />
                        <span class="text-sm">{project.stars}</span>
                      </div>
                    )}
                  </div>

                  {project.tech && project.tech.length > 0 && (
                    <div class="flex flex-wrap gap-2">
                      {project.tech.map((tech) => (
                        <span class="bg-theme-card text-theme-text-secondary border-theme-border rounded border px-2 py-0.5 text-xs">
                          {tech}
                        </span>
                      ))}
                    </div>
                  )}
                </Tag>
              );
            })}
          </div>
        )
      }
    </section>

    <!-- More Projects CTA -->
    <section class="border-theme-border mt-10 rounded-lg border border-dashed p-5 text-center">
      <p class="text-theme-text-secondary mb-3 text-sm">
        More experiments and half-baked ideas on GitHub
      </p>
      <a
        href="https://github.com/isala404"
        target="_blank"
        rel="noopener noreferrer"
        class="text-theme-accent hover:text-theme-accent-hover inline-flex items-center gap-2 transition-colors"
      >
        <Github class="h-4 w-4" />
        <span>@isala404</span>
        <ExternalLink class="h-3 w-3" />
      </a>
    </section>
  </main>
</BaseLayout>
