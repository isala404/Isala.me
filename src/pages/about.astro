---
import BaseLayout from '../layouts/BaseLayout.astro';
import { profile, education, certifications, speaking, publications } from '../data/profile';
---

<BaseLayout title="About | Isala Piyarisi" description={profile.longBio.slice(0, 160)}>
  <main class="max-w-content mx-auto px-6 py-16 md:py-24 relative z-10">
    <!-- Header -->
    <header class="mb-12 fade-in fade-in-delay-1">
      <a href="/" class="text-sm text-summer-text-secondary arrow-link mb-6 inline-block">
        <span class="arrow">←</span><span class="text">back home</span>
      </a>
      <h1 class="text-3xl md:text-4xl font-semibold text-summer-text mb-4 tracking-tight">
        The Long Version
      </h1>
    </header>

    <!-- Bio Section -->
    <section class="mb-12 fade-in fade-in-delay-2">
      <div class="prose prose-summer max-w-none">
        {profile.longBio.split('\n\n').map((paragraph) => (
          <p class="text-base text-summer-text leading-relaxed mb-4">{paragraph}</p>
        ))}
      </div>
    </section>

    <!-- Skills -->
    <section class="mb-12 fade-in fade-in-delay-2">
      <div class="flex items-center gap-4 mb-6">
        <h2 class="text-lg font-medium text-summer-text section-heading">Top Skills</h2>
        <div class="h-px bg-summer-text/10 flex-grow border-b border-dotted border-summer-text/30"></div>
      </div>
      <div class="flex flex-wrap gap-2">
        {profile.topSkills.map((skill) => (
          <span class="px-3 py-1 text-sm bg-summer-text/5 text-summer-text-secondary rounded-full border border-summer-text/10">
            {skill}
          </span>
        ))}
      </div>
    </section>

    <!-- Education -->
    <section class="mb-12 fade-in fade-in-delay-2">
      <div class="flex items-center gap-4 mb-6">
        <h2 class="text-lg font-medium text-summer-text section-heading">Education</h2>
        <div class="h-px bg-summer-text/10 flex-grow border-b border-dotted border-summer-text/30"></div>
      </div>

      {education.map((edu) => (
        <article class="mb-6">
          <div class="flex justify-between items-start mb-2">
            <div>
              <h3 class="font-medium text-summer-text">{edu.institution}</h3>
              <p class="text-sm text-summer-text-secondary">{edu.degree}</p>
            </div>
            <span class="text-sm text-summer-text-secondary font-mono shrink-0 ml-4">
              {edu.startDate} — {edu.endDate}
            </span>
          </div>
          <p class="text-sm text-summer-golden mb-2">{edu.grade} · {edu.rank}</p>
          <ul class="space-y-1">
            {edu.highlights.map((highlight) => (
              <li class="text-sm text-summer-text-secondary flex items-start gap-2">
                <span class="text-summer-accent mt-1">·</span>
                <span>{highlight}</span>
              </li>
            ))}
          </ul>
        </article>
      ))}
    </section>

    <!-- Certifications -->
    <section class="mb-12 fade-in fade-in-delay-3">
      <div class="flex items-center gap-4 mb-6">
        <h2 class="text-lg font-medium text-summer-text section-heading">Certifications</h2>
        <div class="h-px bg-summer-text/10 flex-grow border-b border-dotted border-summer-text/30"></div>
      </div>

      <div class="space-y-3">
        {certifications.map((cert) => (
          <article class="flex justify-between items-start">
            <div>
              <span class="text-summer-text">{cert.name}</span>
              <p class="text-sm text-summer-text-secondary">{cert.issuer}</p>
            </div>
            <span class="text-sm text-summer-text-secondary font-mono shrink-0 ml-4">
              {cert.date}
            </span>
          </article>
        ))}
      </div>
    </section>

    <!-- Speaking -->
    <section class="mb-12 fade-in fade-in-delay-3">
      <div class="flex items-center gap-4 mb-6">
        <h2 class="text-lg font-medium text-summer-text section-heading">Speaking</h2>
        <div class="h-px bg-summer-text/10 flex-grow border-b border-dotted border-summer-text/30"></div>
      </div>

      <div class="space-y-4">
        {speaking.map((talk) => (
          <article class="group">
            <div class="flex justify-between items-start">
              <div>
                {talk.link ? (
                  <a href={talk.link} target="_blank" class="text-summer-text hover-underline block">
                    {talk.title}
                  </a>
                ) : (
                  <span class="text-summer-text">{talk.title}</span>
                )}
                <p class="text-sm text-summer-text-secondary">{talk.event}</p>
              </div>
              <span class="text-xs text-summer-accent shrink-0 ml-4 px-2 py-0.5 rounded bg-summer-accent/10">
                {talk.type}
              </span>
            </div>
          </article>
        ))}
      </div>
    </section>

    <!-- Publications -->
    <section class="mb-12 fade-in fade-in-delay-4">
      <div class="flex items-center gap-4 mb-6">
        <h2 class="text-lg font-medium text-summer-text section-heading">Publications</h2>
        <div class="h-px bg-summer-text/10 flex-grow border-b border-dotted border-summer-text/30"></div>
      </div>

      <div class="space-y-4">
        {publications.map((pub) => (
          <article class="flex justify-between items-start">
            <div>
              <a href={pub.url} target="_blank" class="text-summer-text hover-underline block">
                {pub.title}
              </a>
              <p class="text-sm text-summer-text-secondary">{pub.publisher}</p>
            </div>
            <span class="text-sm text-summer-text-secondary font-mono shrink-0 ml-4">
              {pub.date}
            </span>
          </article>
        ))}
      </div>
    </section>

    <!-- Footer Nav -->
    <footer class="fade-in fade-in-delay-4 border-t border-dotted border-summer-text/20 pt-8">
      <div class="flex justify-between text-sm">
        <a href="/experience" class="text-summer-text-secondary arrow-link">
          <span class="arrow">→</span><span class="text">experience</span>
        </a>
        <a href="/projects" class="text-summer-text-secondary arrow-link">
          <span class="arrow">→</span><span class="text">projects</span>
        </a>
      </div>
    </footer>
  </main>
</BaseLayout>
