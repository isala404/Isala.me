---
import BaseLayout from '../layouts/BaseLayout.astro';
import { longBio } from '../lib/profile';
---

<BaseLayout title="About | Isala Piyarisi" description={longBio.slice(0, 160)}>
  <main class="max-w-content relative z-10 mx-auto px-6 py-16 md:py-24">
    <!-- Back Home -->
    <a href="/" class="text-theme-text-secondary arrow-link mb-8 inline-block text-sm">
      <span class="arrow">‚Üê</span><span class="text">back home</span>
    </a>

    <!-- Header -->
    <header class="mb-12">
      <h1 class="text-theme-text mb-4 text-3xl font-semibold tracking-tight md:text-4xl">
        The Long Version
      </h1>
    </header>

    <!-- Bio Section -->
    <section class="mb-12">
      <div class="prose prose-summer max-w-none">
        {
          longBio
            .split('\n\n')
            .map((paragraph) => (
              <p class="text-theme-text mb-4 text-base leading-relaxed">{paragraph}</p>
            ))
        }
      </div>
    </section>
  </main>
</BaseLayout>
