---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const notes = (await getCollection('notes', ({ data }) => !data.draft)).sort(
  (a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf()
);

// Get all unique tags with counts
const tagCounts = notes.reduce(
  (acc, note) => {
    (note.data.tags || []).forEach((tag) => {
      acc[tag] = (acc[tag] || 0) + 1;
    });
    return acc;
  },
  {} as Record<string, number>
);

const allTags = Object.entries(tagCounts)
  .sort((a, b) => b[1] - a[1])
  .map(([tag]) => tag);

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
}

function getYear(date: Date): number {
  return date.getFullYear();
}

// Group notes by year
const notesByYear = notes.reduce(
  (acc, note) => {
    const year = getYear(note.data.publishedAt);
    if (!acc[year]) acc[year] = [];
    acc[year].push(note);
    return acc;
  },
  {} as Record<number, typeof notes>
);

const years = Object.keys(notesByYear)
  .map(Number)
  .sort((a, b) => b - a);
---

<BaseLayout
  title="Notes | Isala Piyarisi"
  description="Quick thoughts, TILs, and micro-posts about tech and engineering."
>
  <main class="max-w-content relative z-10 mx-auto px-6 py-16 md:py-24">
    <!-- Back Home -->
    <a href="/" class="text-summer-text-secondary arrow-link mb-8 inline-block text-sm">
      <span class="arrow">‚Üê</span><span class="text">back home</span>
    </a>

    <!-- Header -->
    <header class="mb-8">
      <h1 class="text-summer-text mb-4 text-3xl font-semibold tracking-tight md:text-4xl">Notes</h1>
      <p class="text-summer-text-secondary text-base">
        Quick thoughts, TILs, and things I want to remember
      </p>
    </header>

    <!-- Tags Filter -->
    {
      allTags.length > 0 && (
        <section class="mb-10">
          <div class="flex flex-wrap gap-2">
            {allTags.map((tag) => (
              <a
                href={`/notes/tag/${tag}`}
                class="bg-summer-teal/10 text-summer-teal hover:bg-summer-teal/20 rounded px-3 py-1 text-sm transition-colors"
              >
                #{tag}
                <span class="text-summer-teal/50 ml-1">({tagCounts[tag]})</span>
              </a>
            ))}
          </div>
        </section>
      )
    }

    <!-- Notes List - Card Style -->
    <section>
      {
        notes.length === 0 ? (
          <p class="text-summer-text-secondary">No notes yet. Check back soon!</p>
        ) : (
          <div class="space-y-10">
            {years.map((year) => (
              <div>
                <h2 class="text-summer-text-secondary bg-summer-bg sticky top-4 mb-4 py-1 font-mono text-sm">
                  {year}
                </h2>
                <div class="grid gap-3">
                  {notesByYear[year].map((note) => (
                    <article class="border-summer-text/5 bg-summer-text/[0.02] hover:bg-summer-text/[0.04] hover:border-summer-accent/20 rounded-lg border p-4 transition-all">
                      <div class="mb-2 flex items-start justify-between gap-4">
                        <a
                          href={`/notes/${note.slug}`}
                          class="text-summer-text hover:text-summer-accent font-medium transition-colors"
                        >
                          {note.data.title}
                        </a>
                        <span class="text-summer-text-secondary shrink-0 font-mono text-xs">
                          {formatDate(note.data.publishedAt)}
                        </span>
                      </div>
                      {note.data.tags && note.data.tags.length > 0 && (
                        <div class="flex flex-wrap gap-1.5">
                          {note.data.tags.map((tag) => (
                            <a
                              href={`/notes/tag/${tag}`}
                              class="bg-summer-teal/10 text-summer-teal hover:bg-summer-teal/20 rounded px-1.5 py-0.5 text-xs transition-colors"
                            >
                              #{tag}
                            </a>
                          ))}
                        </div>
                      )}
                    </article>
                  ))}
                </div>
              </div>
            ))}
          </div>
        )
      }
    </section>
  </main>
</BaseLayout>
